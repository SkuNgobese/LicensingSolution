@model IEnumerable<LicensingSolution.Models.Driver>

@{
    ViewData["Title"] = "Driver Operators";
}
<!DOCTYPE html>
<html>
<body class="sidebar-mini fixed">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-hover table-bordered" id="table_id" style="width: 100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.FullName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DriverId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DrivingLicence.LicenceExpiryDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DrivingLicence.PDPExpiryDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Owner)
                                </th>
                                <th>
                                    Options
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var led = item.DrivingLicence.LicenceExpiryDate.ToString("dd-MMM-yyyy");
                                var pdped = item.DrivingLicence.PDPExpiryDate.ToString("dd-MMM-yyyy");
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DriverId)
                                    </td>
                                    <td>
                                        @led
                                    </td>
                                    <td>
                                        @pdped
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Owner.FullName)
                                    </td>
                                    <td>
                                        @Html.ActionLink("nfo", "Details", new { id = item.DriverId }, new { @class = "btn btn-info icon-btn fa fa-info", @style = "padding:1px" }) |
                                        @Html.ActionLink("Edit", "Edit", new { id = item.DriverId }, new { @class = "btn btn-warning icon-btn fa fa-edit", @style = "padding:1px" }) |
                                        @Html.ActionLink("Del", "Delete", new { id = item.DriverId }, new { @class = "btn btn-danger icon-btn fa fa-trash", @style = "padding:1px" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <br />
    <abbr title="Add New"><a class="btn btn-outline-primary icon-btn" href="~/Drivers/Create"><i class="fa fa-plus row" style="padding:1px"></i></a></abbr>

    <script src="~/DataTables/jquery-3.4.1.js"></script>
    <link href="~/DataTables/DataTables-1.10.18/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/DataTables/datatables.min.css" rel="stylesheet" type="text/css" />
    <script src="~/DataTables/datatables.min.js" type="text/javascript"></script>
    <!-- icon library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script type="text/javascript">
        $('#table_id').DataTable({
            "scrollY": 250,
            "scrollX": true
        });
        responsive: true
    </script>
</body>
</html>
