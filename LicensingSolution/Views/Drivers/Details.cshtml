@model LicensingSolution.Models.Driver

@{
    ViewData["Title"] = "Details";
    var led = Model.DrivingLicence.LicenceExpiryDate.ToString("dd-MMM-yyyy");
    var pdped = Model.DrivingLicence.PDPExpiryDate.ToString("dd-MMM-yyyy");
}

<div class="card">
    <div class="card-body">
        <h2 class="card-title mdi mdi-account-card-details text-lg-right"> Driver</h2>
        <img class="img-lg" src="@Model.ImgPath" asp-append-version="true" alt="DriverPhoto" />
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FullName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FullName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DriverId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DriverId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DrivingLicence.LicenceNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DrivingLicence.LicenceNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DrivingLicence.VehicleStickerNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DrivingLicence.VehicleStickerNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DrivingLicence.LicenceExpiryDate)
            </dt>
            <dd class="col-sm-10">
                @led
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DrivingLicence.PDPExpiryDate)
            </dt>
            <dd class="col-sm-10">
                @pdped
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Owner)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Owner.FullName)
            </dd>
        </dl>
    </div>
</div>
<br />
<form asp-action="Edit" asp-route-id="@Model.DriverId" method="get">
    <button class="btn btn-primary"><i class="fa fa-edit"></i></button>
    <abbr title="View List"><a class="btn btn-outline-primary icon-btn" href="~/Drivers"><i class="fa fa-list row" style="padding:1px"></i></a></abbr>
</form>