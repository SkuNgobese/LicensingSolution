@model IEnumerable<LicensingSolution.Models.Config>

@{
    ViewData["Title"] = "Configs";
}

<!DOCTYPE html>
<html>
<body class="sidebar-mini fixed">
    <div class="row">
        <div class="col-md-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <table class="table table-hover table-bordered" id="table_id" style="width: 100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Value)
                                </th>
                                <th>
                                    Options
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Value)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning icon-btn fa fa-edit", @style = "padding:1px" }) |
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="~/DataTables/jquery-3.4.1.js"></script>
    <link href="~/DataTables/DataTables-1.10.18/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/DataTables/datatables.min.css" rel="stylesheet" type="text/css" />
    <script src="~/DataTables/datatables.min.js" type="text/javascript"></script>
    <!-- icon library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script type="text/javascript">
        $('#table_id').DataTable({
            "scrollY": 250,
            "scrollX": true
        });
        responsive: true
    </script>
</body>
</html>